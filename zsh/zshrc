# Add user-installed binaries to PATH
export PATH="/usr/local/bin:$PATH"
# Prepare NVM
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
# Path to your oh-my-zsh installation.
export ZSH="$HOME/.oh-my-zsh"
# Set fzf to use ripgrep
export FZF_DEFAULT_COMMAND='rg --files --no-ignore-vcs --hidden'
# ZSH theme. See https://github.com/robbyrussell/oh-my-zsh/wiki/Themes
ZSH_THEME="agnoster"

# Use case-sensitive completion.
CASE_SENSITIVE="true"

# Uncomment the following line to enable command auto-correction.
ENABLE_CORRECTION="true"

# Uncomment the following line to display red dots whilst waiting for completion.
COMPLETION_WAITING_DOTS="true"

# ZSH plugins to load
# Repo must be cloned in .oh-my-zsh/plugins if it is not done by default
plugins=( git fzf pyenv vi-mode zsh-syntax-highlighting )
source $ZSH/oh-my-zsh.sh
source $ZSH/plugins/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh

# vi-mode keytimeout setup (0.2sec, same as init.vim)
export KEYTIMEOUT=20

#Overwrite/add some git plugin aliases
alias gcm="git commit -m"
alias gcom="git checkout master"
alias gai="git add -i"

# You may need to manually set your language environment
export LANG="en_US.UTF-8"
# Set terminal to use 256 colors
export TERM="screen-256color"
# Custom pager for man pages
export PAGER="most"

# Custom aliases that doesn't fit elsewhere
alias tmux="direnv exec / tmux" # Make sure direnv is unloaded before exec tmux
alias letsgo="pipenv install neovim" # For virtual environments setup
alias tiga="tig --all"
alias dm="docker-machine"
alias ctags="$(brew --prefix)/bin/ctags"

# Create function used in direnv .envrc to setup PROMPT
show_virtual_env() {
    if [[ -n "$VIRTUAL_ENV" && -n "$DIRENV_DIR" ]]; then
        echo "(${$(basename $VIRTUAL_ENV)%-*})"
    fi
}
export PROMPT=%{%F{red}%}$(show_virtual_env)$PROMPT

# Hook direnv into shell
eval "$(direnv hook zsh)"

# Show only username in prompt
prompt_context() {
  if [[ "$USER" != "$DEFAULT_USER" || -n "$SSH_CLIENT" ]]; then
    prompt_segment black default "%(!.%{%F{yellow}%}.)$USER"
  fi
}

# bepo vi-mode bindings. See zshzle man page for bindkey insights
# zle mole vim
bindkey -v
# Bepo mappings
bindkey -a t vi-backward-char
bindkey -a n vi-forward-char
bindkey -a s vi-down-line-or-history
bindkey -a r vi-up-line-or-history
bindkey -a $ vi-end-of-line
bindkey -a 0 vi-digit-or-beginning-of-line
bindkey -a dd vi-change-whole-line
bindkey -a Ã© vi-forward-blank-word
bindkey nn vi-cmd-mode


[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
