[core]
	editor = nvim
	# Ignore files specified in ~/.gitgnore (not only in local .gitignore)
	excludesfile = ~/.gitignore

[merge]
	# Add merged commits messages to resulting commit message
	log = true

[rebase]
	# Automatically squash fixup commits
	autosquash = true

[diff]
